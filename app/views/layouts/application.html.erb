<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/f71a604c74.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container">
      <p id="notice"><%= notice %></p>
      <% if user_signed_in? %>
        <div class="serch-form">
          <%= form_with(scope: :search, url:search_path, method: :get, local: true) do |f| %>
            <%= f.text_field :content %>
            <%= f.select :model, {'User': 'user', 'Book': 'book'}, {class: 'form-control', required: true} %>
            <%= f.select :how, {'完全一致': 'match', '前方一致': 'forward', '後方一致': 'backward', '部分一致': 'partial'}, {class: 'form-control', required: true} %>
            <%= f.submit '検索' %>
          <% end %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
