<% if user_signed_in? %>
  <div class="serch-form">
    <%= form_with(scope: :search, url:search_path, method: :get, local: true) do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, {'User': 'user', 'Book': 'book'}, {class: 'form-control', required: true} %>
      <%= f.select :how, {'完全一致': 'match', '前方一致': 'forward', '後方一致': 'backward', '部分一致': 'partial'}, {class: 'form-control', required: true} %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
<% end %>